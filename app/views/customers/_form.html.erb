<div class="container">
  <div class="row mt-4">
      <div class="card">
        <div class="card-header">
            <h3 class="text-center font-weight-light my-4">Cliente</h3>
        </div>
          <div class="card-body">
              <%= simple_form_for @customer do |form| %>
                  <div class="row">
                      <%= form.error_notification %>
                      <div class="col-12 col-md-8">
                          <%= form.input :name %>
                      </div>
                      <div class="col-12 col-md-4">
                          <%= form.input :dob, html5: true %>
                      </div>
                  </div>
                  <%= form.input :mobile_phone %>
                  <%= form.input :email %>
          </div>
          <div class="card-footer d-flex justify-content-around">
              <%= link_to 'voltar', customers_path, class: 'btn btn-secondary' %>
              <%= form.submit 'Enviar', class: 'btn btn-success' %>
              <% end %>
          </div>
      </div>
  </div>

</div>
