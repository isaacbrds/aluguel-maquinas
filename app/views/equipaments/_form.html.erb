<div class="container">
  <div class="row mt-4">
      <div class="card">
        <div class="card-header">
            <h3 class="text-center font-weight-light my-4">Equipamento</h3>
        </div>
          <div class="card-body">
              <%= simple_form_for @equipament do |form| %>
                  <div class="row">
                      <div class="col-12 col-md-8">
                          <%= form.input :name %>
                      </div>
                      <div class="col-12 col-md-4">
                          <%= form.input :serial_number%>
                      </div>
                        <%= form.label :description%> 
                        <%= form.rich_text_area :description %>
                  </div>
          </div>
          <div class="card-footer d-flex justify-content-around">
              <%= link_to 'voltar', equipaments_path, class: 'btn btn-secondary' %>
              <%= form.submit 'Enviar', class: 'btn btn-success' %>
              <% end %>
          </div>
      </div>
  </div>

</div>
